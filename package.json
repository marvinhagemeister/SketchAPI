{
  "name": "sketch-api",
  "version": "1.1.0",
  "author": "Sam Deane",
  "license": "MIT",
  "description": "Javascript API for Sketch",
  "main": "build/api.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:BohemianCoding/SketchAPI.git"
  },
  "typings": "index.d.ts",
  "scripts": {
    "test": "mocha --compilers ts:ts-node/register -R dot 'src/**/__tests__/*.spec.ts'",
    "test-watch": "npm t -- -w -R min",
    "coverage": "nyc npm t",
    "coverage-open": "nyc npm t && open coverage/index.html",
    "build": "webpack --display-error-details"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.33",
    "@types/sinon": "^1.16.32",
    "awesome-typescript-loader": "^3.0.0-beta.3",
    "chai": "^3.5.0",
    "enhanced-resolve": "^2.3.0",
    "mocha": "^3.1.2",
    "nyc": "^9.0.1",
    "sinon": "^1.17.6",
    "ts-node": "^1.7.0",
    "tslint": "^4.0.1",
    "typescript": "^2.0.10",
    "webpack": "^1.13.3"
  },
  "dependencies": {},
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "node_modules/",
      "**/__tests__/**",
      "__tests__/**",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text",
      "text-summary",
      "lcovonly"
    ],
    "all": true
  }
}
